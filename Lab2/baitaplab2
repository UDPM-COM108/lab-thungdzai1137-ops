#include <stdio.h>
#define PI 3.14159

int main() {
    float r, chuviHT, dientichHT;

    printf("Nhap ban kinh hinh tron: ");
    scanf("%f", &r);

    chuviHT = 2 * PI * r;
    dientichHT = PI * r * r;

    printf("Chu vi hinh tron = %.2f\n", chuviHT);
    printf("Dien tich hinh tron = %.2f\n", dientichHT);

    return 0;
}
